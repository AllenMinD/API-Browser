/* pages/login/login.wxss */
page {
  width: 100%;
  height: 100vh;
  display: flex;
  align-items: center;
}

.container {
  width: 80%;
  padding: 20rpx 10%;
}

/* 返回按钮 */
.backTo {
  position: fixed;
  top: 10rpx;
  left: 60rpx;
  width: 40rpx;
}

.header {
  margin-bottom: 100rpx;
}

.header .main-title {
  font-size: 50rpx;
  color: #303133;
  font-weight: 600;
}

.header .sub-title {
  font-size: 30rpx;
  color: #909399;
  padding-top: 15rpx;
}

.login-form {
  width: 100%;
  margin: 0 auto;
}

.login-form > view {
  display: flex;
  align-items: center;
  padding: 10rpx 0 15rpx;
  /* border-bottom: 4rpx solid #409EFF; */
  border-bottom: 2rpx solid #C0C4CC;
  margin-bottom: 30rpx;
  transition: border-bottom 0.3s;
}

.login-form > view.active {
  border-bottom: 4rpx solid #409EFF;
}

.login-form input {
  color: #909399;
  font-size: 28rpx;
}

.login-form .icon {
  width: 40rpx;
  margin-right: 20rpx;
}

.submit-btn {
  margin-top: 60rpx;
  font-size: 30rpx;
  background-color: #409EFF;
  color: #fff;
  box-shadow: 0 0 30rpx rgba(0, 140, 255, 0.37);
  outline: none;
  border: none;
}

.submit-btn::after {
  outline: none;
  border: none;
}

.tips {
  font-size: 25rpx;
  color: #C0C4CC;
  padding-top: 25rpx;
}